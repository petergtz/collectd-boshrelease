exec 2>&1

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables
set -x

# Detect # of CPUs so make jobs can be parallelized
CPUS=$(grep -c ^processor /proc/cpuinfo)

# Available variables
# $BOSH_COMPILE_TARGET - where this package & spec'd source files are available
# $BOSH_INSTALL_TARGET - where you copy/install files to be included in package
# autoconf
export PREFIX=${BOSH_INSTALL_TARGET}
export PATH=$PREFIX/bin:$PATH

tar xzf autoconf-2.69.tar.gz
(
  set -e
  cd autoconf-2.69
  autoconf_dir=$PREFIX/share/autoconf ./configure --prefix=$PREFIX
  make -j${CPUS}
  make install prefix=$PREFIX
)

# automake
tar xzf automake-1.15.tar.gz
(
  set -e
  cd automake-1.15
  ./configure --prefix=$PREFIX
  make -j${CPUS}
  make install prefix=$PREFIX
)

# libtool
tar xzf libtool-2.4.6.tar.gz
(
  set -e
  cd libtool-2.4.6
  ./configure --prefix=$PREFIX
  make -j${CPUS}
  make install prefix=$PREFIX
)

# Protocol buffers
PROTOBUF_VERSION=`ls -r protobuf-*.tar.bz2 | sed 's/protobuf-\(.*\)\.tar\.bz2/\1/' | head -1`
tar xjvf ${BOSH_COMPILE_TARGET}/protobuf-${PROTOBUF_VERSION}.tar.bz2
(
  set -e
  cd protobuf-${PROTOBUF_VERSION}
  ./configure --prefix=$PREFIX
  make -j${CPUS}
  make install
  
)

# Protobuf-c
export PKG_CONFIG_PATH=${BOSH_INSTALL_TARGET}/lib/pkgconfig
tar xvfz protobuf-c-1.2.1.tar.gz
(
  set -e
  cd protobuf-c-1.2.1
  ./configure --prefix=$PREFIX
  make -j${CPUS}
  make install
)


export LD_LIBRARY_PATH="/var/vcap/packages/python/lib:/var/vcap/packages/yajl/lib"
tar xvjf collectd-5.5.0.tar.bz2
(
  export PKG_CONFIG_PATH=${BOSH_INSTALL_TARGET}/lib/pkgconfig
  export CPPFLAGS="-I${BOSH_INSTALL_TARGET}/include"
  export LDFLAGS="-L${BOSH_INSTALL_TARGET}/lib/"
  export PATH=${PATH}:${BOSH_INSTALL_TARGET}/bin
  cd collectd-5.5.0
  ./configure --prefix=${BOSH_INSTALL_TARGET} \
      --enable-write_riemann \
      --enable-python --with-python=/var/vcap/packages/python/bin/python \
      --enable-curl-json --with-libyajl=/var/vcap/packages/yajl

  make -j${CPUS} install
)

mkdir -p ${BOSH_INSTALL_TARGET}/lib/collectd
wget 'https://drive.google.com/uc?export=download&id=0B0Nnq2bj4rsIbktJZ2ZLNTdyYmc' --output-document=${BOSH_INSTALL_TARGET}/lib/collectd/write_metric_mtlumberjack.so
chmod 755 ${BOSH_INSTALL_TARGET}/lib/collectd/write_metric_mtlumberjack.so
